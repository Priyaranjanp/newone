<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/registrationdetails</property>
		<property name="hibernate.connection.user">root</property>
		<property name="hibernate.connection.password">code005</property>		
		<property name="org.hibernate.dialect.MySQLDialect"></property>
		
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
 		<property name="hbm2ddl.auto">create</property>
 		
		<mapping class="com.insertion.InsertDTO" />


   </session-factory>
</hibernate-configuration>